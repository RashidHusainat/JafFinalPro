@model CreateSliderViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Create</h1>

<h4>Slider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SliderTitle" class="control-label"></label>
                <input asp-for="SliderTitle" class="form-control" />
                <span asp-validation-for="SliderTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderSubTitle" class="control-label"></label>
                <input asp-for="SliderSubTitle" class="form-control" />
                <span asp-validation-for="SliderSubTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountPerc" class="control-label"></label>
                <input asp-for="DiscountPerc" class="form-control" />
                <span asp-validation-for="DiscountPerc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BtnTxt" class="control-label"></label>
                <input asp-for="BtnTxt" class="form-control" />
                <span asp-validation-for="BtnTxt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BtnUrl" class="control-label"></label>
                <input asp-for="BtnUrl" class="form-control" />
                <span asp-validation-for="BtnUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderImg" class="control-label"></label>
                <input type="file" asp-for="SliderImg" class="form-control" />
                <span asp-validation-for="SliderImg" class="text-danger"></span>
            </div>
            
            
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

